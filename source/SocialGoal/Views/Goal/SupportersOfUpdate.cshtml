@using System.Linq
@model UpdateSupportersViewModel

<div class="well">
@if (!Model.Users.Any())
{
    <p class="span5 alert alert-info supporters-message">No Supporters</p>  
}
    @foreach (var item in Model.Users)
    {    
        <div style="margin:0px;padding:10px;">
         <div style="margin-left:1px;">
          
                <a href="@Url.Action("UserProfile", "Account", new { id = item.Id }, null)" >
                    @Html.User().Avatar(item.ProfilePicUrl, new { @class = "span3", style = "margin-right:10px;" })
                </a>    
         </div>
         <div style="margin:0px;">  
            @Html.ActionLink(@item.UserName, "UserProfile", "Account", new { id = item.UserId }, null)
            <div>@item.Email</div>         
         </div>        
         </div>
               <hr />
              
            }
</div>


